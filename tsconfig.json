{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es5",
		"lib": ["es6", "dom"],
		"sourceMap": true,
		"declaration": true,
		"strictNullChecks": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noImplicitUseStrict": true,
		"noUnusedLocals": true,
		"removeComments": false,
		"preserveConstEnums": true,
		"newLine": "LF",
		"allowJs": true
	},
	"include": [
		"./lib/index.ts",
		"./lib/global.d.ts"
	]
}
